node {
    def mvnHome
    docker {
        image 'node:16-buster-slim'
        args '-p 3000:3000'
    }
    stage('Preparation') {
        git '/home/a428-cicd-labs'
        mvnHome = tool 'M3'
    }
    stage('Build') {
        script {
            sh 'npm install'
        }
    }

    stage('Test') {
        script {
            sh './jenkins/scripts/test.sh'
        }
    }
}